<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>つぶやき一覧</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  
    <h1>ようこそ、つぶやく( ˙-˙ )へ</h1>

    <h2>これはあなたの日常や気持ちをリアルタイムでつぶやくSNSです</h2>
    <h3>さっそく登録してはじめてみましょう</h3>
    
    

    <%= link_to "新規登録", signup_path, class: "btn btn-lg btn-primary" %>
  

  <%= link_to image_tag("uyuni.jpg", alt: "Rails logo", class: "top-img"),
              'http://rubyonrails.org/' %>
<% end %>